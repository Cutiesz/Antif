<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical"
    tools:context="com.korsolution.antif.MyCarActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<com.korsolution.antif.RadiusOverlayView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <Button
                android:id="@+id/btnSelectCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:drawableTop="@drawable/car"
                android:paddingTop="20dp"
                android:text="@string/select_car"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtVehicleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Name"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVehicleLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Location"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Time"
                android:textColor="@color/White" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
