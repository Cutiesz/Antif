<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/transparent1">

        <ImageView
            android:id="@+id/imgMapStatic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/blank_img" />

        <RelativeLayout
            android:id="@+id/layoutDetail1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/txtNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_noti"
                android:textColor="@color/blue_sky" />

            <TextView
                android:id="@+id/txtPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNoti"
                android:textColor="@color/Black"
                android:text="Place"/>

            <TextView
                android:id="@+id/txtDateTimeNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPlace"
                android:text="23/02/2560 22:30"
                android:textColor="@color/transparent_black" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>