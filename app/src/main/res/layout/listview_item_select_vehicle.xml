<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:gravity="center"
    android:padding="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgVehicle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/image_car" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtVehicleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/txt_display_name"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/txtVehicleDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/transparent_black"
            android:text="DateTime"/>

        <TextView
            android:id="@+id/txtVehicleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status :"/>

        <TextView
            android:id="@+id/txtAuthenticate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authenticate : "/>
    </LinearLayout>

</LinearLayout>